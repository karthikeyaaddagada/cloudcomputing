<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/med"
    tools:context="com.example.ved.MARS.Register">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/register_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <android.support.v7.widget.Toolbar
                android:id="@+id/my_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                android:titleTextColor="@color/colorListBack"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/medl" />
            </android.support.v7.widget.Toolbar>



                <ProgressBar
                    android:id="@+id/pb_loading_indicator"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:paddingRight="2dp"
                    android:visibility="gone" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

        <TextView
            android:id="@+id/voiceInput"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:hint="MedicineName"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/btnSpeak"
            android:gravity="center_vertical"
            android:background="@drawable/round_corner"
            android:textColor="#000000"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColorLink="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:textStyle="normal" />

                <Button
                    android:id="@+id/btnSpeak"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mic1"
                    android:clickable="true"
                    android:padding="16dp"
                    android:textColor="#8A0808"
                    android:textSize="22sp"
                    android:textStyle="normal" />
            </LinearLayout>
            </LinearLayout>





            <EditText
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/round_corner"
                android:hint="Dosage"
                android:inputType="number"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="#000000"
                android:textColorHint="#8A0808"
                android:textColorLink="#8A0808" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="80dp"
                android:layout_height="33dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="11dp"
                android:text="Set Time: "
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="36dp">


                <Spinner
                    android:id="@+id/spinner9"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"

                    android:popupBackground="#d7e2f4"
                    android:spinnerMode="dropdown"
                    android:textColor="#000000" />

                <Spinner
                    android:id="@+id/spinner8"
                    android:layout_width="85dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="12dp"

                    android:layout_toStartOf="@+id/spinner9"
                    android:popupBackground="#d7e2f4"
                    android:spinnerMode="dropdown"
                    android:textColor="#000000" />

                <Spinner
                    android:id="@+id/spinner7"
                    android:layout_width="85dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="14dp"

                    android:layout_toStartOf="@+id/spinner8"
                    android:popupBackground="#d7e2f4"
                    android:spinnerMode="dropdown"
                    android:textColor="#000000" />

            </RelativeLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="180dp"
                android:layout_height="23dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="11dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="11dp"
                android:text="Select days:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <CheckBox
                    android:id="@+id/checkbox1"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:text="Sun"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimaryDark"
                    android:textStyle="bold" />


                <CheckBox
                    android:id="@+id/checkbox2"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="125dp"
                    android:text="Mon"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/checkbox3"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/checkbox2"
                    android:layout_marginStart="105dp"
                    android:text="Tue"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimaryDark"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <CheckBox
                    android:id="@+id/checkbox4"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:text="Wed"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/checkbox5"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="125dp"
                    android:text="Thu"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/checkbox6"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/checkbox5"
                    android:layout_marginStart="105dp"
                    android:text="Fri"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimaryDark"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <CheckBox
                    android:id="@+id/checkbox7"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="125dp"
                    android:text="Sat"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimaryDark"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

            </RelativeLayout>

            <Button
                android:id="@+id/save"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="0.27"
                android:background="@drawable/roundbutton"
                android:fadingEdge="horizontal|vertical"
                android:fontFamily="times new roman"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/colorListBack"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>